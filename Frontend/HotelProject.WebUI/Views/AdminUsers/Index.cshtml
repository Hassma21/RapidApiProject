
@model List<ResultAppUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}


<table class="table table-xs mb-0">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad Soyad</th>
            <th>Çalıştığı Kurum</th>
            <th>Şehir</th>
            <th>Durum</th>

        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td><img src="~/images/AdminUsers/@item.imageUrl" width="75" height="75" class=" rounded-circle mr-3" alt=""></td>
                <td>@item.name @item.surname</td>
                <td>@item.workLocation.workLocationName</td>
                <td>@item.workLocation.workLocationCity</td>
                <td><i class="fa fa-circle-o text-success  mr-2"></i>Aktif</td>
               
            </tr>
        }
       
      
    </tbody>
    <a href="/Register/Index" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
</table>


