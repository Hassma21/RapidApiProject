
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>
<a href="/Role/AddRole/" class="btn btn-success">Yeni Rol Ekle</a>

