@model UpdateRoomDto
@{
    ViewData["Title"] = "UpdateStaff";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="RoomId" />
    <label>Oda Numarası</label>
    <input type="text" asp-for="RoomNumber" class="form-control" />
    <br />
    <label>Oda Image</label>
    <input type="text" asp-for="RoomCoverImage" class="form-control" />
    <br />
    <label>Oda Fiyat</label>
    <input type="text" asp-for="Price" class="form-control" />
    <br />
    <label>Oda Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <label>Oda Yatak Sayısı</label>
    <input type="text" asp-for="BedCount" class="form-control" />
    <br />
    <label>Oda Lavabo Sayısı</label>
    <input type="text" asp-for="BathCount" class="form-control" />
    <br />
    <label>Oda Wifi</label>
    <input type="text" asp-for="Wifi" class="form-control" />
    <br />
    <label>Oda Açıklaması</label>
    <input type="text-area" asp-for="Description" class="form-control" />
    <br />
    <button class="btn btn-primary">Odayı Güncelle</button>
</form>

