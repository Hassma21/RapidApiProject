@model List<ResultRoomDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Fiyatı</th>
        <th>Güncelle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.RoomId</td>
            <td>@item.RoomNumber</td>
            <td>@item.Price</td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomId" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
    
</table>
<a href="/AdminRoom/AddRoom/" class="btn btn-info">Yeni Oda</a>

